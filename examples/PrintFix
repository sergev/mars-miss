#!/usr/local/bin/marsexec

logon SYS SYSTEM;

put - using "'    | Фамилия     |  Отдел     |  Рождение    | Зарплата |'/"
	    "'    |-------------|------------|--------------|----------|'/"
	    "('    | ',a12,'|',i5,'       |',i8,'      |',f8.2,'  |')"
	select сотрудники for фамилия, отдел, рождение, зарплата;

put - using "/'              |  Отдел  | Начальник  | Бюджет  |'/"
	    "'              |---------|------------|---------|'/"
	    "(14x,'|',i6,'   | ',a11,'| ',f7.2,' |')"
	select отделы for отдел, начальник, бюджет;
